# Discord Bot 設定
# Botのトークン (Discord Developer Portal > Bot > Token)
DISCORD_TOKEN=your_discord_bot_token_here

# BotのクライアントID (Discord Developer Portal > OAuth2 > Client ID)
CLIENT_ID=your_discord_client_id_here

# 固定ギルドID (コマンドを即時反映させるためのサーバーID)
DISCORD_GUILD_ID=your_fixed_guild_id_here

# API 設定
# APIサーバーのURL (ローカルで動かす場合は http://localhost:4000)
API_BASE_URL=http://localhost:4000

# Botの識別ID (APIサーバーの設定と合わせる必要があります)
BOT_ID=UNITED_NAMELESS_BOT

# Web Server 設定
# Bot自体のヘルスチェック用Webサーバーのポート
PORT=3000

# Firebase (管理者用)
# 通常はAPI経由でアクセスするため不要ですが、直接DB操作が必要な場合に使用します
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_PRIVATE_KEY=your_private_key
# FIREBASE_CLIENT_EMAIL=your_client_email

# Google Sheets Logging (ログ保存用)
# GOOGLE_SHEETS_ID=your_sheets_id
